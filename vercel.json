{
    "version": 2,
    "builds": [
        {
            "src": "ballon/wsgi.py",
            "use": "@vercel/python",
            "config": {"maxLambdaSize": "15mb"}
        },
        {
            "src": "build_files.sh",
            "use": "@vercel/static-build"
            
        } 
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "ballon/wsgi.py"
        }
    ]
}